        android:textSize="16sp"
        android:layout_marginBottom="24dp" />


    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="OK"
        android:textSize="18sp"
        android:backgroundTint="#FF9800"
        android:textColor="@android:color/white"/>

</LinearLayout>
