<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 선택한 날짜 표시 -->
        <TextView
            android:id="@+id/selectedDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜를 불러오는 중..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- 날짜 이미지 -->
        <ImageView
            android:id="@+id/recordedImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:src="@android:drawable/ic_menu_report_image" />

        <!-- 당 섭취 정보 -->
        <TextView
            android:id="@+id/sugarInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You ate a total of 45 grams of sugar."
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/sugarCubesInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Same as about 15 sugar cubes."
            android:textSize="14sp"
            android:textColor="@color/gray_500"
            android:layout_marginBottom="12dp"/>

        <!-- 3x10 정사각형 -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/sugarCubeGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:columnCount="10"
            app:rowCount="3"
            />

        <!-- 문구 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This day, You ate this kind of food."
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- 식사 기록 -->
        <!-- 🍱 아침/점심/저녁/간식 2x2 카드 -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/mealCardGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:columnCount="2">

            <!-- 아침 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="🍳 Breakfast"
                    android:textSize="20sp"/>
            </androidx.cardview.widget.CardView>

            <!-- 점심 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="🍛 Lunch"
                    android:textSize="18sp"/>
            </androidx.cardview.widget.CardView>

            <!-- 저녁 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="🍜 Dinner"
                    android:textSize="18sp"/>
            </androidx.cardview.widget.CardView>

            <!-- 간식 (Record 버튼) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/snackCard"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                app:layout_columnWeight="1"
                app:cardCornerRadius="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="🍜 Snack time"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="➕ Record"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>
        </androidx.gridlayout.widget.GridLayout>



    </LinearLayout>
</ScrollView>
