<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- 문구: "I'd like to know you more!" -->
    <TextView
        android:id="@+id/moreInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_d_like_to_know_you_more"
        android:textSize="18sp"
        android:gravity="left"
        android:layout_marginBottom="16dp" />

    <!-- 문구: "The information you receive now..." -->
    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_information_you_receive_now_is_used_to_calculate_the_appropriate_value_per_unit"
        android:textSize="14sp"
        android:gravity="left"
        android:layout_marginBottom="16dp" />

    <!-- Height 입력 -->
    <EditText
        android:id="@+id/heightInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/height"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:layout_marginBottom="16dp" />

    <!-- Weight 입력 -->
    <EditText
        android:id="@+id/weightInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/weight"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:layout_marginBottom="16dp" />

    <!-- Age 입력 -->
    <EditText
        android:id="@+id/ageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/age"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:layout_marginBottom="20dp" />

    <!-- ✅ Sex 선택 항목 -->
    <TextView
        android:id="@+id/sexLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnMale"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="♂ Man"
            android:backgroundTint="@color/gray_300"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnFemale"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="♀ Woman"
            android:backgroundTint="@color/gray_300"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>


    <!-- Next 버튼 -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:enabled="false"
        android:background="@color/brawn_600"
        android:textColor="@android:color/white" />
</LinearLayout>
